<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:weightSum="1.0"
    android:gravity="center|top"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <TextView
        android:id="@+id/adtprnt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Attached printer"
        android:layout_weight=".10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <TextView
        android:id="@+id/printerName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Printer name"
        android:layout_weight=".10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />







    <Button
        android:id="@+id/connectPtr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Connect Printer"
        android:layout_weight=".10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/disconnectPtr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Disconnect printer"
        android:layout_weight=".10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edittextPtr"
        android:layout_width="match_parent"
        android:layout_weight=".30"
        android:layout_height="0dp" />


    <Button
        android:id="@+id/printPtr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Print Document"
        android:layout_weight=".10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






</LinearLayout>